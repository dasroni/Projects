<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".interActiveFragment">

    <ImageView
        android:id="@+id/gasImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        tools:src="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/gasImageText"
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/gasImageView"
        android:layout_alignTop="@id/gasImageView"
        android:layout_alignRight="@id/gasImageText"
        android:layout_alignBottom="@id/gasImageView"
        android:layout_centerVertical="true"
        android:layout_marginLeft="274dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:gravity="center"
        android:text=""
        android:textColor="#fdfcfc"
        android:textSize="40dp" />


    <TextView
        android:id="@+id/motionText"

        android:layout_width="344dp"
        android:layout_height="wrap_content"

        android:layout_alignBottom="@id/gasImageView"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="10dp"
        android:text=""
        android:textColor="#fdfcfc"
        android:textStyle="bold"
        android:textSize="25dp" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/gasImageView"
        android:progressDrawable="@drawable/pb_drawable_1"

        android:layout_alignParentStart="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="10dp"

        />

</RelativeLayout>